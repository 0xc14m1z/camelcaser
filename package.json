{
  "name": "camelcaser",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run init",
    "build": "npx babel src --out-dir dist",
    "pretest": "npm run build",
    "test": "NODE_ENV=test nyc mocha --require babel-core/register specs/**/*.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "npm test -- -w"
  },
  "nyc": {
    "exclude": [
      "specs",
      "dist"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ciamiz/camelcaser.git"
  },
  "author": "0xc14m1z <0xc14m1z@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ciamiz/camelcaser/issues"
  },
  "homepage": "https://github.com/ciamiz/camelcaser#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "mocha": "^5.0.0",
    "npx": "^9.7.1",
    "nyc": "^11.4.1",
    "babel-plugin-rewire": "^1.1.0"
  }
}
